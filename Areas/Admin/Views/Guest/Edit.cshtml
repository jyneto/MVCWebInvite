@using MVCWebInvite.Models
@model GuestFormViewModel
<h2>Edit Guest</h2>
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @await Html.PartialAsync("_GuestFormPartial", Model)
    <input type="hidden" asp-for="Guest.Id" />
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-area="Admin" asp-controller="Guest" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
