@{
    var logoutUrl = Url.Action("Logout", "Account", new { area = "Admin" });
}
<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @RenderSection("Head", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Menu" asp-action="Index">Menu</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Booking" asp-action="Index">Booking</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Guest" asp-action="Index">Guest</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Table" asp-action="Index">Table</a></li>
        
            </div>
            <div class="ms-auto mt-2 mt-lg-0">
                <form method="post" action="@logoutUrl">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-light">Logout</button>
                </form>
            </div>

        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   
    @RenderSection("Scripts", required: false)
</body>
</html>
