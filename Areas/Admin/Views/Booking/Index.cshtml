@model List<MVCWebInvite.ViewModels.Admin.BookingListItemVm>

@{
    ViewData["Title"] = "Bookings";
}


<div class="container py-3">
 <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
     <h1 class="h3 mb-0">Bookings</h1>
    <div class="d-flex gap-2">
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-success">Back to Dashboard</a>
        <a asp-area="Admin" asp-controller="Booking" asp-action="Create" class="btn btn-success">Create Booking</a>
    </div>
    @if(TempData["ErrorMessage"] is string err)
    {
        <div class="alert alert-danger mt-3 w-100">@err</div>
    }
    @if(TempData["SuccessMessage"] is string msg)
    {
        <div class="alert alert-success mt-3 w-100">@msg</div>        
    }
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Table</th>
                    <th>Guest</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Party</th>
                        <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.Id</td>
                            <td>
                                @(b.TableNumber != null ? b.TableNumber : (b.Id != null ? $"#{b.Id}" : "No Table"))
               
                            </td>
                            <td>
                                @(b.GuestName != null ? b.GuestName : (b.GuestId != null ? $"ID {b.GuestId}" : "No Guest"))
              
                            </td>
                            <td>@b.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@b.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@b.PartySize</td>
                            <td class="text-nowrap">
                                 <a asp-area="Admin" asp-controller="Booking" asp-action="Edit" asp-route-id="@b.Id" class="btn btn-warning btn-sm">Edit</a>
                                 <form asp-area="Admin" asp-controller="Booking" asp-action="Delete" asp-route-id="@b.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this booking?');">Delete</button>
                                  </form>
                            </td>
                        </tr>    
                    }
                </tbody>
        </table>
    </div>
  </div>
  </div>
