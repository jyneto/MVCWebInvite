@model MVCWebInvite.ViewModels.Admin.BookingFormViewModel
@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container py-3">
    <h1 class="h3 mb-3">Edit Booking</h1>

    <form asp-action="Edit" method="post" class="row g-3" >
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="col-12">
            <label asp-for="TableId" class="form-label">Table</label>
            <select asp-for="TableId" asp-items="Model.TableOptions" class="form-select">
                <option value="">Select a table</option>
            </select>
            <span asp-validation-for="TableId" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="GuestId" class="form-label">Guest</label>
            <select asp-for="GuestId" asp-items="Model.GuestOptions" class="form-select">
                <option value="">Select a guest</option>
            </select>
            <span asp-validation-for="GuestId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="StartTime" class="form-label">Start Time</label>
            <input asp-for="StartTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PartySize" class="form-label">Party Size</label>
            <input asp-for="PartySize" type="number" class="form-control" />
            <span asp-validation-for="PartySize" class="text-danger"></span>
        </div>

        <div class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-area="Admin" asp-controller="Booking" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}