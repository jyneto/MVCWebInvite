<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MVCWebInvite</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Parisienne&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Wedding</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Öppna meny">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="#story">Our Story</a></li>
                        <li class="nav-item"><a class="nav-link" href="#event">Event</a></li>
                        <li class="nav-item"><a class="nav-link" href="#rsvp">RSVP</a></li>
                        <li class="nav-item"><a class="nav-link" href="#gallery">Gallery</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                    </ul>

                    <div class="d-flex">
                        <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Account" asp-action="Login">
                            Admin
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <!-- Globala flash-meddelanden -->
        @if (TempData["SuccessMessage"] is string ok)
        {
            <div class="alert alert-success text-center">@ok</div>
        }
        @if (TempData["ErrorMessage"] is string err)
        {
            <div class="alert alert-danger text-center">@err</div>
        }
        @if (TempData["LogoutMessage"] is string logout)
        {
            <div class="alert alert-success text-center">@logout</div>
        }


        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-3 d-flex justify-content-between">
            <span>&copy; @DateTime.Now.Year - MVCWebInvite</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS (håll det enkelt, inga dubbletter) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* Aktivera validering på sidor som behöver det *@
    @RenderSection("Head", required: false)
    @RenderSection("Scripts", required: false)
</body>
</html>
